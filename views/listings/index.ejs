
<%- layout('/layouts/boilerplate.ejs') %>

<%- include("../includes/movable.ejs") %>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 justify-content-center">
        <% for( let listing of allListings ) { %>
            <a class="spot reveal" href="/listings/<%= listing._id %>">
                <div class="cards">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="Listing Image" style="height: 20rem;">
                    <div class="card-body">
                        <b>
                            <%= listing.title %>
                        </b>
                        <p>&#8377; <%= listing.price.toLocaleString("en-IN") %>
                                <i class="tax">&nbsp;&nbsp;+18% GST </i>
                        </p><br>
                    </div>
                </div>
            </a>
            <% } %>
    </div><br>


    <!-- the anchor tags href /listings/:id route will open the specific listing and show its detailed description (It will send request to show route)-->









