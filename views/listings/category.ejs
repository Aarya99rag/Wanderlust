<%- layout('/layouts/boilerplate.ejs') %>

    <% if (lists.length==0) { %>
        <h5 style="text-align: center;">No place uploaded in such category.</h5>
        <% } %>
            <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 justify-content-center">
                <% for( let list of lists ) { %>
                    <a class="spot" href="/listings/<%= list._id %>">
                        <div class="cards">
                            <img src="<%= list.image.url %>" class="card-img-top" alt="Listing Image"
                                style="height: 20rem;">
                            <div class="card-body" style="padding: 10px;">
                                <b>
                                    <%= list.title %>
                                </b>
                                <p>&#8377; <%= list.price.toLocaleString("en-IN") %>
                                    <i class="tax">&nbsp;&nbsp;+18% GST </i>
                                </p>
                            </div>
                        </div>
                    </a>
                    <% } %>
            </div><br>